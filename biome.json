{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["**/node_modules/**/*"]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				}
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
